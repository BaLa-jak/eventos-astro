<style>
  #container {
    padding: 4rem 0;
    min-height: 100vh;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.15;
  }

  #background :global(svg) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--text-main);
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .page-header p {
    font-size: 1.125rem;
    color: var(--text-muted);
    max-width: 42rem;
    line-height: 1.6;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .load-more-container {
    margin-top: 5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .load-more-btn {
    background-color: var(--bg-alt);
    border: 2px solid var(--primary-color);
    color: var(--primary-color);
    padding: 1rem 3rem;
    border-radius: 0.75rem;
    font-weight: 700;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
  }

  .load-more-btn:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .stats {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.25rem;
    }
  }
</style>
