---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="top-accent"></div>
<header id="navbar">
  <div class="navbar-container">
    <div class="left-section">
      <a href="/" class="brand">
        <div class="logo-box">
          <span class="material-icons">school</span>
        </div>
        <div class="logo-text">
          <span class="ues-text">UES</span>
          <span class="sub-text">Universidad Estatal de Sonora</span>
        </div>
      </a>
      <div class="title">
        <h1 class="title-text">{title}</h1>
      </div>
    </div>
    <section>
      <div class="nav-links">
        <i class="fa-solid fa-bell nav-icon"></i>
        <a href="/iniciar-sesion" class="btn-login">
          <i class="fa-solid fa-user"></i>
          Iniciar Sesi√≥n
        </a>
      </div>
    </section>
  </div>
</header>

<style>
  .btn-login {
    background-color: var(--primary-color);
    width: 100%;
    height: 100%;
    border-radius: 4px;
    color: white;
    transition: background-color 0.3s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  .btn-login i {
    font-size: 1rem;
  }

  .btn-login:hover {
    background-color: var(--primary-hover);
    color: var(--text-main);
    border: 2px solid var(--primary-color);
    transition: all 0.3s ease;
    box-shadow: 3px var(--shadow-md);
    cursor: pointer;
    font-weight: 600;
    text-decoration: none;
  }

  .top-accent {
    border-radius: 12px;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary-color) 0%,
      var(--primary-hover) 100%
    );
    width: 100%;
  }

  #navbar {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-color);
    height: 80px;
    display: flex;
    align-items: center;
  }

  .navbar-container {
    max-width: 1280px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .left-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-box {
    background-color: var(--primary-color);
    padding: 0.5rem;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .ues-text {
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.05em;
    color: var(--primary-color);
    line-height: 1;
  }

  .sub-text {
    font-size: 10px;
    font-weight: 500;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1;
    margin-top: 4px;
  }

  .divider {
    height: 32px;
    width: 1px;
    background-color: var(--border-color);
    margin: 0 0.5rem;
  }

  .page-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-main);
  }

  .right-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .support-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.2s;
  }

  .support-btn:hover {
    color: var(--primary-color);
  }

  .login-btn {
    background-color: var(--primary-color);
    color: white;
    padding: 0.625rem 1.5rem;
    border-radius: 4px;
    font-weight: 700;
    font-size: 0.875rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    font-size: 0.95rem;
    text-decoration: none;
  }

  .login-btn:hover {
    background-color: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  @media (max-width: 768px) {
    .divider,
    .page-title,
    .support-btn {
      display: none;
    }
  }
</style>
