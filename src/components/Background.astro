---
interface Props {
    title?: string;
    subtitle?: string;
}

let { title, subtitle } = Astro.props;
---

<div class="container">
    <defs>
        <linearGradient id="ues-grad" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#f39233"></stop>
            <stop offset="45%" style="stop-color:#7e328b"></stop>
            <stop offset="100%" style="stop-color:#e91e63"></stop>
        </linearGradient>
    </defs>

    <rect width="1000" height="300" fill="url(#ues-grad)"></rect>

    <path d="M1000 300V100C850 150 750 300 600 300H1000Z" fill="white"></path>
</div>

<style>
    /* From Uiverse.io by mihocsaszilard */
    .container {
        width: 100%;
        height: 100%;
        background: radial-gradient(
            125% 125% at -2% 101%,
            rgba(245, 87, 2, 1) 10.5%,
            rgba(245, 120, 2, 1) 16%,
            rgba(245, 140, 2, 1) 17.5%,
            rgba(245, 170, 100, 1) 25%,
            rgba(238, 174, 202, 1) 40%,
            rgba(202, 179, 214, 1) 65%,
            rgba(148, 201, 233, 1) 100%
        );
    }
</style>
